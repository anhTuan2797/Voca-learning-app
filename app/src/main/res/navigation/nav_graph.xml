    android:id="@+id/nav_graph"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.example.myapplication.main_fragment"
        android:label="fragment_main_fragment"
        tools:layout="@layout/fragment_main_fragment" >
        <action
            android:id="@+id/action_main_fragment_to_topic_fragment"
            app:destination="@id/topic_fragment" />
    </fragment>

    <fragment
        android:id="@+id/topic_fragment"
        android:name="com.example.myapplication.TopicRecylerView.TopicRecylerViewAdapter.topic_fragment"
